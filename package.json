{
  "name": "pkg-desc",
  "version": "1.0.0",
  "description": "List detail of all npm packages",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "watch": "npm run build -- --watch",
    "dev": "DEBUG=pkg-desc:* esno src/cli.ts",
    "run": "esno src/cli.ts",
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [],
  "author": "Glinton Liao",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "pkg-desc": "bin/pkg-desc.js"
  },
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.1.2",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@glintonliao/eslint-config": "0.0.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.11.10",
    "eslint": "^8.28.0",
    "esno": "^0.16.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": "@glintonliao"
  }
}
